{% extends "layouts/app.twig" %}
{% block title %}{{ blog.title }}{% endblock %}
{% block main %}
<main class="py-5">
    <div class="container">
        <div class="card">
            <div class="card-body">
                <img src="{{ blog.image }}" alt="{{ blog.title }}" class="img-fluid mb-2">
                <h2>{{ blog.title }}</h2>
                <h5>By {{ blog.author.full_name }}</h5>
                <hr>
                <div class="text-justify">
                    {{ blog.body | raw }}
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}